<%= game_state(@tally.game_state) %>
<p>Turns left:  <%= @tally.turns_left %></p>
<p>Word so far: <%= word_so_far(@tally) %></p>
<%= if game_over?(@tally) do %>
    <%= new_game_btn(@conn) %>
<% else %>
    <%= form_for(@conn, Routes.hangman_path(@conn, :guess), [as: :game], fn f -> %>
        <%= text_input f, :guess %>
        <%= submit "Guess" %>
    <% end) %>
<% end %>
